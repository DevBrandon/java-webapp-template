<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date [%thread] %-5level %logger{36} - [%X{username}] - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="APP_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${catalina.base}/logs/sample-webapp.log</file>
    <append>true</append>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>sample-webapp.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>30</maxHistory> <!-- days -->
    </rollingPolicy>
    <encoder>
      <Pattern>%date [%thread] %-5level %logger{35} - %msg%n</Pattern>
    </encoder>
  </appender>

  <appender name="EMAIL" class="ch.qos.logback.classic.net.SMTPAppender">
    <smtpHost>localhost</smtpHost>
    <!--
    <smtpPort>587</smtpPort>
    <STARTTLS>true</STARTTLS>
    <username>test@localhost</username>
    <password>test</password>
    -->

    <to>test@localhost</to>
    <from>noreply@localhost</from>
    <subject>[SAMPLE] %X{username} - %m</subject>
    <layout class="ch.qos.logback.classic.PatternLayout">
      <pattern>%date %-5level %logger{36} - [%X{username}] - %message%n</pattern>
    </layout>
  </appender>

  <logger name="com.todc">
    <level value="DEBUG" />
  </logger>

  <logger name="org.springframework">
    <level value="WARN" />
  </logger>

  <root>
    <level value="INFO" />
    <appender-ref ref="APP_FILE" />
    <appender-ref ref="STDOUT" />
  </root>

  <root>
    <level value="ERROR" />
    <appender-ref ref="EMAIL" />
  </root>

</configuration>
